<h1>Bdays#new</h1>
<p>Find me in app/views/bdays/new.html.erb</p>

<div class="form">
        <%= simple_form_for (@bday) do |f| %>
            <div class="search-form-control form-group">
            <%= f.input :name %>
            <%= f.input :birth_date, as: :date, start_year: Date.today.year - 120,
                        end_year: Date.today.year, discard_day: false,
                        order: [:day, :month, :year] %>
            <%= f.button :submit, class: 'btn btn-flat'%>
        <% end %>
        <%= link_to 'Back', root_path %>
</div>
